[Unit]
Description=Synthia Backend Service
After=network.target

[Service]
Type=simple
WorkingDirectory=%h/Projects/Synthia/backend
ExecStart=%h/Projects/Synthia/backend/.venv/bin/uvicorn app.main:app --host 0.0.0.0 --port 9001
Restart=always
RestartSec=2
EnvironmentFile=%h/.config/synthia/admin.env
Environment=PYTHONUNBUFFERED=1

[Install]
WantedBy=default.target
